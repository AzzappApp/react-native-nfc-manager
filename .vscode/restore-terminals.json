{
  "artificialDelayMilliseconds": 700,
  "keepExistingTerminalsOpen": false,
  "runOnStartup": false,
  "terminals": [
    {
      "splitTerminals": [
        {
          "name": "mobile metro",
          "commands": ["cd packages/app", "yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "rn watch",
          "commands": ["cd packages/app", "yarn typecheck --watch"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "backoffice",
          "commands": ["cd packages/backoffice", "yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "relay watch",
          "commands": [
            "yarn relay:prepare && yarn update-graphql-schema &&  yarn relay:build --repersist && yarn relay:watch"
          ]
        },
        {
          "name": "graphQL codegen",
          "commands": ["yarn graphql-codegen  --watch"]
        },
        {
          "name": "schema compile",
          "commands": ["cd packages/schema", "yarn compile:watch"]
        },
        {
          "name": "schema definition",
          "commands": ["cd packages/schema", "yarn definition:watch"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "shared",
          "commands": ["cd packages/shared", "yarn dev"]
        },
        {
          "name": "service",
          "commands": ["cd packages/service", "yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "payment",
          "commands": ["cd packages/payment", "yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "web",
          "commands": ["cd packages/web", "yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "api",
          "commands": ["cd packages/api", "yarn dev"]
        }
      ]
    },
    {
      "splitTerminals": [
        {
          "name": "pscale",
          "commands": ["pscale connect --org azzapp azzapp main"]
        }
      ]
    }
  ]
}
