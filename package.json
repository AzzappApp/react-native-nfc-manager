{
  "name": "azzapp-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "patch-package",
    "lint": "eslint .",
    "typecheck": "tsc",
    "test": "jest",
    "create-query-map-file": "touch ./packages/relay/query-map.json",
    "relay": "relay-compiler",
    "build": "yarn create-query-map-file && yarn relay",
    "dev:relay": "relay-compiler --watch",
    "dev:web": "yarn workspace @azzapp/web dev",
    "dev:mobile": "yarn workspace @azzapp/mobile dev",
    "dev": "ttab yarn dev:relay && ttab yarn dev:web && ttab yarn dev:mobile",
    "run:ios": "yarn workspace @azzapp/mobile run:ios",
    "run:android": "yarn workspace @azzapp/mobile run:android",
    "build:ios": "yarn workspace @azzapp/mobile build:ios",
    "deploy:ios": "yarn workspace @azzapp/mobile deploy:ios",
    "update-graphql-schema": "ts-node ./scripts/updateGraphQLSchema.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/runtime": "^7.12.5",
    "@svgr/webpack": "^6.2.1",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-relay": "^14.0.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "node-fetch": "2",
    "patch-package": "^6.4.7",
    "prettier": "^2.6.0",
    "relay-compiler": "^14.0.0",
    "ts-node": "^10.7.0",
    "ttab": "^0.7.2",
    "typescript": "^4.7.2"
  },
  "resolutions": {
    "@babel/core": "7.17.12",
    "@babel/plugin-transform-typescript": "7.17.12",
    "@types/react": "^18.0.3"
  }
}
