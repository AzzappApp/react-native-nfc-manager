{
  "name": "azzapp-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "typecheck": "tsc",
    "test": "jest",
    "dev:relay": "yarn workspace @azzapp/app relay-watch",
    "dev:web": "yarn workspace @azzapp/web dev",
    "dev:mobile": "yarn workspace @azzapp/mobile dev",
    "dev": "ttab yarn dev:relay && ttab yarn dev:web && ttab yarn dev:mobile",
    "run:ios": "yarn workspace @azzapp/mobile run:ios",
    "run:android": "yarn workspace @azzapp/mobile run:android",
    "build:ios": "yarn workspace @azzapp/mobile build:ios",
    "deploy:ios": "yarn workspace @azzapp/mobile deploy:ios",
    "update-graphql-schema": "yarn workspace @azzapp/data update-schema"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/runtime": "^7.12.5",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-relay": "^13.2.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "node-fetch": "2",
    "prettier": "^2.6.0",
    "typescript": "^4.7.1-rc"
  },
  "resolutions": {
    "@types/react": "^18.0.3",
    "@react-native-community/cli": "^7.0.3",
    "@react-native-community/cli-platform-android": "^7.0.1",
    "@react-native-community/cli-platform-ios": "^7.0.1"
  },
  "dependencies": {
    "ttab": "^0.7.2"
  }
}
