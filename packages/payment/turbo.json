{
  "$schema": "https://turbo.build/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "payment-api-client",
        "^build"
      ],
      "outputs": [
        "lib/**"
      ],
      "inputs": [
        "src/**"
      ]
    },
    "payment-api-client": {
      "passThroughEnv": [
        "PAYMENT_API_URL"
      ],
      "dependsOn": [],
      "inputs": [],
      "cache": false
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "src/**"
      ]
    }
  }
}
