{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["build:app", "build:web"]
    },
    "build:app": {
      "inputs": ["src/app/*.json"],
      "outputs": ["compiled/app/**"],
      "dependsOn": ["prepare"]
    },
    "build:web": {
      "inputs": ["src/web/*.json"],
      "outputs": ["compiled/web/**"],
      "dependsOn": ["prepare"]
    },
    "prepare": {
      "inputs": ["src/*.json"],
      "outputs": ["src/app/*.json", "src/web/*.json"],
      "cache": false
    }
  }
}
