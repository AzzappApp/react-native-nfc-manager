{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": [
        "DATABASE_USERNAME",
        "DATABASE_PASSWORD",
        "REPLICA_DATABASE_USERNAME",
        "REPLICA_DATABASE_PASSWORD"
      ],
      "dependsOn": ["^build"],
      "inputs": ["src/**", "public/**"],
      "outputs": [".next/**"]
    },
    "typecheck": { "dependsOn": ["^build"] },
    "test": { "inputs": ["src/**"] },
    "persist-queries": {
      "dependsOn": [],
      "inputs": ["src/persisted-query-map.json"],
      "outputs": []
    }
  }
}
