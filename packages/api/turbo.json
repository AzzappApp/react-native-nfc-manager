{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "env": [
        "DATABASE_USERNAME",
        "DATABASE_PASSWORD",
        "REPLICA_DATABASE_USERNAME",
        "REPLICA_DATABASE_PASSWORD",
        "INNGEST_EVENT_KEY",
        "INNGEST_SIGNING_KEY",
        "FIREBASE_PROJECT_ID",
        "FIREBASE_PRIVATE_KEY",
        "PAYMENT_API_URL",
        "PAYMENT_MONTHLY_RECURRENCE",
        "PAYMENT_YEARLY_RECURRENCE",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_ACCOUNT_VERIFY_SERVICE_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_MESSAGING_SERVICE_SID",
        "TWILIO_PHONE_NUMBER",
        "APPLE_TEAM_IDENTIFIER",
        "APPLE_TOKEN_SECRET",
        "APPLE_TOKEN_PASSWORD",
        "APPLE_PRIVATE_KEY",
        "APPLE_PASS_WWDR",
        "APPLE_PASS_SIGNER_KEY_PASSPHRASE",
        "APPLE_PASS_SIGNER_KEY",
        "APPLE_PASS_SIGNER_CERT",
        "APPLE_PASS_NOTIFICATION_KEY_ID",
        "APPLE_PASS_IDENTIFIER",
        "APPLE_ORGANIZATION_NAME",
        "APPLE_KEY_ID",
        "APPLE_CLIENT_ID",
        "IAP_REVENUECAT_NOTIFICATION_BEARER",
        "BRANDFETCH_CLIENT_ID",
        "CRON_SECRET",
        "FORGOT_PASSWORD_CRYPTO_PASSWORD",
        "FREE_BETA_ANDROID_DATE_LIMIT",
        "GOOGLE_PASS_CREDENTIALS",
        "GOOGLE_PASS_ISSUER_ID",
        "JWT_SECRET",
        "OPENAI_API_SECRETKEY",
        "SENDGRIP_NOREPLY_SENDER",
        "SENDGRID_API_KEY",
        "LINKEDIN_TOKEN_SECRET",
        "LINKEDIN_CLIENT_SECRET",
        "LINKEDIN_CLIENT_ID",
        "LAST_SUPPORTED_APP_VERSION"
      ],
      "dependsOn": ["^build"],
      "inputs": ["src/**", "public/**"],
      "outputs": [".next/**"]
    },
    "typecheck": { "dependsOn": ["^build"] },
    "test": { "inputs": ["src/**"] },
    "persist-queries": {
      "dependsOn": [],
      "inputs": ["src/persisted-query-map.json"],
      "outputs": []
    }
  }
}
