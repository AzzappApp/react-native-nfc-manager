{
  "git": { "deploymentEnabled": false },
  "headers": [
    {
      "source": "/.well-known/apple-app-site-association",
      "headers": [{ "key": "Content-Type", "value": "application/json" }]
    }
  ],
  "regions": ["fra1", "iad1", "gru1"],
  "redirects": [{ "source": "/", "destination": "https://web.azzapp.com/" }],
  "rewrites": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "api.staging.azzapp.com" }],
      "destination": "https://staging.azzapp.com/api/$1"
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "api.azzapp.com" }],
      "destination": "https://www.azzapp.com/api/$1"
    }
  ]
}
