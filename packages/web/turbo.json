{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "public/**"],
      "outputs": [".next/**"],
      "passThroughEnv": ["SENTRY_AUTH_TOKEN"]
    },
    "typecheck": { "dependsOn": ["^build"] },
    "test": { "inputs": ["src/**"] }
  }
}
