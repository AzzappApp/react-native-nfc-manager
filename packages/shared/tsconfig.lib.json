{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "moduleResolution": "node",
    "resolvePackageJsonExports": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "scripts",
    "tsconfig.json",
    "tsconfig.lib.json",
    "jest.config.js",
    "**/__mocks__/*",
    "**/__tests__/*"
  ]
}
