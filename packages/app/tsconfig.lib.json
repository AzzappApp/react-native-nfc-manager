{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "paths": {
      "#*": ["./*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./src/**/*.json"
  ],
  "exclude": ["node_modules", "lib", "**/__mocks__/*", "**/__tests__/*"]
}
