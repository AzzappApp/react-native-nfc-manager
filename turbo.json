{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["patches/*.patch"],
  "tasks": {
    "clean": { "dependsOn": [] },
    "build": { "dependsOn": [] },
    "dev": { "persistent": true, "cache": false, "dependsOn": [] },
    "//#relay:build": {
      "dependsOn": ["graphql-codegen"],
      "inputs": ["packages/app/src/**/*.{js,jsx,ts,tsx}", "./schema.graphql"],
      "outputs": [
        "packages/app/src/relayArtifacts/**",
        "packages/api/src/persisted-query-map.json"
      ]
    },
    "app:build": { "dependsOn": ["build", "//#relay:build"] },
    "//#graphql-codegen": {
      "dependsOn": [],
      "inputs": ["packages/schema/**/*.graphql", "./codegen.yml"],
      "outputs": ["./schema.graphql", "./packages/schema/src/__generated__/**"]
    },
    "lint": {}
  }
}
