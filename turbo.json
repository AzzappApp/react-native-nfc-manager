{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["//#relay:build"]
    },
    "//#relay:build": {
      "dependsOn": ["relay:prepare"],
      "inputs": ["packages/**/*.{js,jsx,ts,tsx}", "schema.graphql"],
      "outputs": [
        "packages/relay/artifacts/**",
        "packages/relay/query-map.json"
      ]
    },
    "//#relay:prepare": {
      "dependsOn": ["graphql-codegen"],
      "inputs": []
    },
    "//#graphql-codegen": {
      "dependsOn": [],
      "inputs": []
    },
    "lint": {},
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["patches/*.patch"]
}
